<style>
  .features {
    padding: 100px 64px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .features-header {
    text-align: center;
    margin-bottom: 64px;
  }

  .section-badge {
    display: inline-block;
    background: var(--black);
    color: var(--cyan);
    border: 2px solid var(--cyan);
    padding: 8px 16px;
    font-weight: 900;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 24px;
  }

  .section-title {
    font-size: 48px;
    font-weight: 900;
    color: var(--white);
    text-transform: uppercase;
    letter-spacing: -2px;
    margin: 0 0 16px 0;
  }

  .section-subtitle {
    font-size: 18px;
    color: var(--white);
    opacity: 0.7;
    margin: 0;
    font-family: 'Courier New', monospace;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .feature-card {
    background: var(--black);
    border: 3px solid var(--blue);
    padding: 32px;
    transition: all 0.2s ease;
    position: relative;
  }

  .feature-card:hover {
    border-color: var(--cyan);
    transform: translate(-4px, -4px);
    box-shadow: 8px 8px 0 var(--cyan);
  }

  .feature-icon {
    font-size: 48px;
    margin-bottom: 20px;
  }

  .feature-title {
    font-size: 18px;
    font-weight: 900;
    color: var(--cyan);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 12px 0;
  }

  .feature-description {
    font-size: 14px;
    line-height: 1.6;
    color: var(--white);
    opacity: 0.8;
    margin: 0;
    font-family: 'Courier New', monospace;
  }

  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .features {
      padding: 64px 20px;
    }

    .section-title {
      font-size: 32px;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
