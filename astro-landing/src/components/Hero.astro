---
// Hero section
---

<section class="hero">
  <div class="hero-content">
    <div class="hero-badge">
      <span>âš¡</span>
      <span class="hero-badge-text">ADVANCED_SKETCHING_SYSTEM</span>
    </div>
    <h1 class="hero-title">
      X-SKETCH <span class="hero-highlight">PRO</span>
    </h1>
    <p class="hero-subtitle">
      Professional-grade sketching application optimized for Android tablets.
      Featuring multi-layer palm rejection, low-latency ink rendering, and a robust brush engine.
    </p>
    <div class="hero-buttons">
      <a href="/app" class="btn-primary">LAUNCH_X-SKETCH</a>
      <a href="https://github.com/me-yeatz/X-Sketch" target="_blank" class="btn-secondary">VIEW_SOURCE</a>
    </div>
    <div class="hero-stats">
      <div class="stat-item">
        <div class="stat-value">10+</div>
        <div class="stat-label">BRUSH_TYPES</div>
      </div>
      <div class="stat-item">
        <div class="stat-value">4ms</div>
        <div class="stat-label">LATENCY</div>
      </div>
      <div class="stat-item">
        <div class="stat-value">99.8%</div>
        <div class="stat-label">STABILITY</div>
      </div>
    </div>
  </div>
  <div class="hero-image">
    <div class="hero-demo">
      <div class="demo-header">
        <div class="demo-dot"></div>
        <div class="demo-dot"></div>
        <div class="demo-dot"></div>
        <span class="demo-title">CYBER_DRIVE_OS // TERMINAL</span>
      </div>
      <div class="demo-content">
        <div class="demo-toolbar">
          <div class="tool-btn active">PEN</div>
          <div class="tool-btn">BRUSH</div>
          <div class="tool-btn">ERASER</div>
        </div>
        <div class="demo-canvas">
          <div class="canvas-grid"></div>
          <div class="demo-stroke demo-stroke-1"></div>
          <div class="demo-stroke demo-stroke-2"></div>
          <div class="demo-stroke demo-stroke-3"></div>
        </div>
        <div class="demo-footer">
          <span class="footer-text">STATUS: RUN // LATENCY: 4ms</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
    padding: 140px 64px 80px;
    max-width: 1600px;
    margin: 0 auto;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--black);
    color: var(--cyan);
    padding: 10px 18px;
    border: 2px solid var(--cyan);
    width: fit-content;
    font-weight: 900;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .hero-badge-text {
    color: var(--cyan);
  }

  .hero-title {
    font-size: 80px;
    font-weight: 900;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: -4px;
    color: var(--white);
  }

  .hero-highlight {
    color: var(--cyan);
    position: relative;
  }

  .hero-subtitle {
    font-size: 18px;
    line-height: 1.6;
    color: var(--white);
    opacity: 0.8;
    max-width: 560px;
    font-family: 'Courier New', monospace;
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    margin-top: 8px;
  }

  .btn-primary {
    background: var(--cyan);
    color: var(--black);
    border: 3px solid var(--blue);
    padding: 16px 32px;
    font-weight: 900;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-decoration: none;
    transition: all 0.2s ease;
    display: inline-block;
    box-shadow: 6px 6px 0 var(--blue);
  }

  .btn-primary:hover {
    background: var(--blue);
    transform: translate(-2px, -2px);
    box-shadow: 8px 8px 0 var(--cyan);
  }

  .btn-secondary {
    background: var(--black);
    color: var(--cyan);
    border: 3px solid var(--blue);
    padding: 16px 32px;
    font-weight: 900;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-decoration: none;
    transition: all 0.2s ease;
    display: inline-block;
    box-shadow: 6px 6px 0 var(--blue);
  }

  .btn-secondary:hover {
    background: var(--cyan);
    color: var(--black);
    transform: translate(-2px, -2px);
    box-shadow: 8px 8px 0 var(--blue);
  }

  .hero-stats {
    display: flex;
    gap: 48px;
    margin-top: 16px;
    padding-top: 24px;
    border-top: 2px solid var(--blue);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .stat-value {
    font-size: 32px;
    font-weight: 900;
    color: var(--cyan);
    text-transform: uppercase;
  }

  .stat-label {
    font-size: 10px;
    font-weight: 900;
    color: var(--white);
    text-transform: uppercase;
    letter-spacing: 2px;
    opacity: 0.6;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-demo {
    background: var(--black);
    border: 3px solid var(--cyan);
    box-shadow: 16px 16px 0 var(--blue);
    width: 100%;
    max-width: 540px;
  }

  .demo-header {
    background: var(--blue);
    padding: 12px 16px;
    display: flex;
    align-items: center;
    gap: 8px;
    border-bottom: 3px solid var(--cyan);
  }

  .demo-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    border: 2px solid var(--black);
    background: var(--cyan);
  }

  .demo-dot:nth-child(2) {
    border-color: var(--black);
    background: var(--white);
  }

  .demo-dot:nth-child(3) {
    border-color: var(--black);
    background: var(--red);
  }

  .demo-title {
    color: var(--black);
    font-size: 11px;
    font-weight: 900;
    margin-left: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .demo-content {
    padding: 20px;
  }

  .demo-toolbar {
    display: flex;
    gap: 8px;
    margin-bottom: 16px;
  }

  .tool-btn {
    background: var(--black);
    border: 2px solid var(--blue);
    color: var(--white);
    padding: 8px 16px;
    font-size: 11px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .tool-btn.active {
    background: var(--cyan);
    color: var(--black);
    border-color: var(--cyan);
  }

  .demo-canvas {
    background: #0D0D10;
    border: 2px solid var(--blue);
    height: 280px;
    position: relative;
    overflow: hidden;
  }

  .canvas-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(114, 160, 193, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(114, 160, 193, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }

  .demo-stroke {
    position: absolute;
    border: 3px solid var(--cyan);
    border-radius: 50%;
    opacity: 0.8;
  }

  .demo-stroke-1 {
    width: 200px;
    height: 80px;
    top: 60px;
    left: 60px;
    transform: rotate(-15deg);
  }

  .demo-stroke-2 {
    width: 180px;
    height: 60px;
    top: 120px;
    left: 200px;
    transform: rotate(10deg);
    border-color: var(--blue);
  }

  .demo-stroke-3 {
    width: 150px;
    height: 50px;
    top: 180px;
    left: 100px;
    transform: rotate(-5deg);
    border-color: var(--white);
  }

  .demo-footer {
    background: var(--black);
    border: 2px solid var(--blue);
    padding: 10px 16px;
    margin-top: 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-text {
    color: var(--cyan);
    font-size: 10px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media (max-width: 1024px) {
    .hero {
      grid-template-columns: 1fr;
      padding: 120px 32px 48px;
      gap: 48px;
    }

    .hero-title {
      font-size: 56px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 120px 20px 48px;
    }

    .hero-title {
      font-size: 42px;
      letter-spacing: -2px;
    }

    .hero-subtitle {
      font-size: 16px;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      text-align: center;
    }

    .hero-stats {
      flex-wrap: wrap;
      gap: 24px;
    }

    .stat-value {
      font-size: 24px;
    }
  }
</style>
